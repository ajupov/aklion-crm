@{
    ViewBag.Title = "Пользователи";
}

<div class="row card">
    <button class="tab-button" onclick="openTab(this, 'users-tab'); initUsersTable();">@ViewBag.Title</button>
    <button class="tab-button" onclick="openTab(this, 'attributes-tab'); initAttributesTable();">Атрибуты</button>
    <button class="tab-button" onclick="openTab(this, 'permissions-tab'); initPermissionsTable();">Права</button>
</div>

<div id="users-tab" class="hidden tab card">
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="horisontal-scrollable pading-10">
                <table id="users-table"></table>
                <div id="users-table-pagination"></div>
            </div>
        </div>
    </div>
</div>

<div id="attributes-tab" class="hidden tab card">
    <div class="row">
        <div class="col s12 m12 l8">
            <div class="horisontal-scrollable pading-10">
                <table id="attributes-table"></table>
                <div id="attributes-table-pagination"></div>
            </div>
        </div>
        <div class="col s12 m12 l12">
            <div class="horisontal-scrollable pading-10">
                <table id="users-attributes-table"></table>
                <div id="users-attributes-table-pagination"></div>
            </div>
        </div>
    </div>
</div>

<div id="permissions-tab" class="hidden tab card">
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="horisontal-scrollable pading-10">
                <table id="users-permissions-table"></table>
                <div id="users-permissions-table-pagination"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <environment names="Development">
            <script src="~/scripts/administration/user/index.js"></script>
        </environment>
        <environment names="Staging,Production">
            <script src="~/scripts/administration/user/index.min.js"></script>
        </environment>
    }
}