@{
    ViewBag.Title = "Магазины";
}

<div class="row">
    <div class="col s12 m12 l12">
        <div class="horisontal-scrollable pading-10">
            <table id="store-table"></table>
            <div id="store-table-pagination"></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s12 m12 l5">
        <div class="horisontal-scrollable pading-10">
            <table id="post-table"></table>
            <div id="post-table-pagination"></div>
        </div>
    </div>
    <div class="col s12 m12 l7">
        <div class="horisontal-scrollable pading-10">
            <table id="user-post-table"></table>
            <div id="user-post-table-pagination"></div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <environment names="Development">
            <script src="~/scripts/administration/store/index.js"></script>
        </environment>
        <environment names="Staging,Production">
            <script src="~/scripts/administration/store/index.min.js"></script>
        </environment>
    }
}