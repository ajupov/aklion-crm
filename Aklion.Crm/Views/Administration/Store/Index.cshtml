@{
    ViewBag.Title = "Магазины";
}

<div class="row card">
    <button class="tab-button" onclick="openTab(this, 'stores-tab'); initStoresTable();">Магазины</button>
</div>

<div id="stores-tab" class="hidden tab card">
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="horisontal-scrollable pading-10">
                <table id="store-table"></table>
                <div id="store-table-pagination"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <environment names="Development">
            <script src="~/scripts/administration/store/index.js"></script>
        </environment>
        <environment names="Staging,Production">
            <script src="~/scripts/administration/store/index.min.js"></script>
        </environment>
    }
}