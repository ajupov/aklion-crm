@{
    ViewBag.Title = "Клиенты";
}

<div class="row card">
    <button class="tab-button" onclick="openTab(this, 'clients-tab'); initClientsTable();">@ViewBag.Title</button>
    <button class="tab-button" onclick="openTab(this, 'attributes-tab'); initAttributesTable();">Атрибуты</button>
    <button class="tab-button" onclick="openTab(this, 'others-tab'); initOthersTable();">Прочее</button>
</div>

<div id="clients-tab" class="hidden tab card">
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="horisontal-scrollable pading-10">
                <table id="clients-table"></table>
                <div id="clients-table-pagination"></div>
            </div>
        </div>
    </div>
</div>

<div id="attributes-tab" class="hidden tab card">
    <div class="row">
        <div class="col s12 m12 l8">
            <div class="horisontal-scrollable pading-10">
                <table id="attributes-table"></table>
                <div id="attributes-table-pagination"></div>
            </div>
        </div>
        <div class="col s12 m12 l12">
            <div class="horisontal-scrollable pading-10">
                <table id="clients-attributes-table"></table>
                <div id="clients-attributes-table-pagination"></div>
            </div>
        </div>
    </div>
</div>

<div id="others-tab" class="hidden tab card">
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="horisontal-scrollable pading-10">
                @*<table id="clients-statuses-table"></table>
                <div id="clients-statuses-table-pagination"></div>*@
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <environment names="Development">
            <script src="~/scripts/administration/client/index.js"></script>
        </environment>
        <environment names="Staging,Production">
            <script src="~/scripts/administration/client/index.min.js"></script>
        </environment>
    }
}