<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Aklion CRM</title>
    <environment names="Development">
        <link rel="stylesheet" href="~/styles/shared/index.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/styles/shared/index.min.css" asp-append-version="true" />
    </environment>
    @RenderSection("Styles", false)
</head>
<body>
    <main>
        <div>
            @RenderBody()
        </div>
    </main>
    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/scripts/shared/index.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/scripts/shared/index.min.js"></script>
    </environment>
    @RenderSection("Scripts", false)
</body>
</html>