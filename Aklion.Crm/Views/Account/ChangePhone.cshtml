@model Aklion.Crm.Models.Account.ChangePhoneModel
@{
    ViewBag.Title = "Изменение номера телефона";
}

<div class="inner-container-small">
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card pading-10 margin-10">
                <h3>@ViewBag.Title</h3>
                <div class="separator"></div>
                <form asp-controller="Account" asp-action="ChangePhone" method="post">
                    <div class="form-group">
                        <input asp-for="Phone" />
                        <label asp-for="Phone" class="control-label"></label><i class="bar"></i>
                        <span asp-validation-for="Phone" class="control-error-text"></span>
                    </div>
                    <div class="right-align form-group">
                        <button class="button" type="submit">Изменить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>