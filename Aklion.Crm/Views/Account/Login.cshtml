@model Aklion.Crm.Models.Account.LoginModel
@{
    ViewData["Title"] = "Вход";
}

<div class="row">
    <div class="col l4 offset-l4 s12 m8 offset-m2">
        <div class="card">
            <h5>@ViewData["Title"]</h5>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div class="input-field">
                    <input asp-for="Login" autocomplete="false"/>
                    <label asp-for="Login" class="validate"></label>
                    <span asp-validation-for="Login" class="error-text"></span>
                </div>
                <div class="input-field">
                    <input asp-for="Password" autocomplete="false"/>
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="error-text"></span>
                </div>
                <input asp-for="RememberMe" type="checkbox" />
                <label asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                <div class="input-field row">
                    <div class="col s6">
                        <button type="submit" class="btn no-padding full-width">Вход</button>
                    </div>
                    <div class="col s6">
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="btn no-padding full-width">Регистрация</a>
                    </div>
                </div>
                <a asp-action="ForgotPassword" class="">Забыли пароль?</a>
            </form>
        </div>
    </div>
</div>