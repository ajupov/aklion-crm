@using GameSite.Models.View.AccountViewModels
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Сброс пароля";
}

<div class="row">
    <div class="col s12">
        <div class="card">
            <h5>@ViewData["Title"]</h5>
            <form asp-controller="Account" asp-action="ChangePassword" method="post">
                <input asp-for="Code" type="hidden"/>
                <div class="input-field">
                    <input asp-for="Email"/>
                    <label asp-for="Email" class="validate"></label>
                    <span asp-validation-for="Email" class="error-text"></span>
                </div>
                <div class="input-field">
                    <input asp-for="Password"/>
                    <label asp-for="Password" class="validate"></label>
                    <span asp-validation-for="Password" class="error-text"></span>
                </div>
                <div class="input-field">
                    <input asp-for="ConfirmPassword"/>
                    <label asp-for="ConfirmPassword" class="validate"></label>
                    <span asp-validation-for="ConfirmPassword" class="error-text"></span>
                </div>
                <div class="input-field">
                    <button type="submit" class="btn">Сбросить</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial").ConfigureAwait(false); }
}