@model Aklion.Crm.Models.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Сброс пароля";
}

<div class="inner-container-small">
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card pading-10 margin-10">
                <h3>@ViewBag.Title</h3>
                <div class="separator"></div>
                <form asp-controller="Account" asp-action="ResetPassword" asp-route-returnurl="@ViewBag.ReturnUrl" method="post">
                    <div class="form-group">
                        <input asp-for="Email" />
                        <label asp-for="Email" class="control-label"></label><i class="bar"></i>
                        <span asp-validation-for="Email" class="control-error-text"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" />
                        <label asp-for="Password" class="control-label"></label><i class="bar"></i>
                        <span asp-validation-for="Password" class="control-error-text"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="ConfirmPassword" />
                        <label asp-for="ConfirmPassword" class="control-label"></label><i class="bar"></i>
                        <span asp-validation-for="ConfirmPassword" class="control-error-text"></span>
                    </div>
                    <div class="right-align form-group">
                        <button class="button" type="submit">Сбросить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>